<?xml version="1.0"?>
<!--
/**
 * ProductTranscript Integration
 *
 * @category  Support
 * @package   Support_ProductTranscript
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="support" translate="label" sortOrder="1000">
            <label>Support</label>
        </tab>
        <section id="support_producttransript" translate="label" type="text" sortOrder="1" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <label>Product Transcript Configuration</label>
            <tab>support</tab>
            <resource>Support_ProductTranscript::config_producttranscript</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <!--Field for Enable the Product Transcript!-->
                <field id="enable" translate="label" type="select" sortOrder="17" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>